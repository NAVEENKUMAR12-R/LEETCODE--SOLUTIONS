class Solution {
public:
    bool isPalindrome(int x) 
    {  long long int d,rev=0;
    int y=x;
        if (x<0)
        {
            return false;
        }
        else;
        {
           
            while(x!=0)
            {
                 d=x%10;
                rev=rev*10+d;
                x=x/10;

            }
            return rev==y;
        }
        
    }
};
